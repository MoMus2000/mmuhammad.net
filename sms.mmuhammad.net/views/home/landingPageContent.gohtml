{{define "contact"}}
<section id="contact" class="bg-light">
<div class="container">
    <div class="row mb-5">
    <div class="col md-8 mx-auto text-center">
    <h6 class="text-primary"> Contact</h6>
    <h1>Get In Touch</h1>
    <p>We look forward to hear from you. Please as an initial step fill out the form below to get in touch, one of our team members will reach out to you in order to dicuss your business needs and what service ours would work best for your business to achieve its objectives.</p>
    </div>
    </div>
    <form action ="" class="row g-3 justify-content-center">
        <div class="col-md-5">
        <input id="name" name="name" type="text" class="form-control" placeholder="Full Name">
        </div>

        <div class="col-md-5">
        <input id="email" name="email" type="text" class="form-control" placeholder="Enter Email">
        </div>

        <div class="col-md-10">
        <input id="subject" name="subject" type="text" class="form-control" placeholder="Enter Subject">
        </div>

        <div class="col-md-10">
        <textarea name="message" id="message" cols=30 rows=5 class="form-control" placeholder="message"> </textarea>
        </div>

        <div class="col-md-10 d-grid">
        <button id="ContactSubmit" class="btn btn-primary">Contact</button>
        </div>

    </form>
</div>
</section>
<script src="/js/landingPage/landingPage.js"> </script>
{{end}}